<!-- Seleciona calendário a cadastrar -->
<div class="container text-center col-lg-4 col-md-6 col-sm-8">

  <form action="/cadastrando" method="POST">
    <div class="card-body text-dark">
      <div class="row">
        <table class="table table table-bordered">
          <thead>
            <tr>
              <th scope="col">ANO</th>
              <th scope="col">SEMESTRE</th>
              <th scope="col">CADASTRAR</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <input name="ano" type="integer" class="form-control numerico text-center" placeholder="aaaa" required="required"
                  aria-describedby="anoHelpBlock">
              </td>
              <td>
                <select name="semestre" class="form-control text-center" required="required">
                  <option value="1">1º semestre</option>
                  <option value="2">2º semestre</option>
                </select>
              </td>
              <td><a href="/edit/{{ano}}{{id}}"><button class="btn-bottom">CADASTRAR</button></a></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </form> <!-- Fim do Formulário -->
</div> <!-- Fim do Container formulário -->
