{{body}}

<!-- Calendar 2 -->
<div class="container">
  <br>
  <a href="/cadastrados"><button class="btn-button">VOLTAR</button></a>
  <hr>

  <!-- Form -->
  <div class="card border mb-3 shadow-lg p-3 mb-5 bg-white rounded">

    <!-- Form Header -->
    <div class="card-header text-center">
      <h7>Calendário 2º semestre</h7>
    </div>
    <br>

    <!-- Linha -->
    <div class="container row">

      <!-- Col 1 - Calendário do semestre -->
      <div class="container text-center col-lg-8 col-md-12 col-sm-12">
        <table class="table table-bordered card-header-calendar">
          <thead>
            <tr class="diaSemana">
              <th scope="col">Segunda</th>
              <th scope="col">Terça</th>
              <th scope="col">Quarta</th>
              <th scope="col">Quinta</th>
              <th scope="col">Sexta</th>
              <th scope="col">Sábado</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                {{#each eventos}}
                  {{data}}
                  <br>
                  {{descricao}}
                  <br>
                  <br>
                {{/each}}
              </td>
            </tr>
          </tbody>
        </table>
      </div> <!-- FIM do calendário do semestre -->
      
      

      <!-- Col 2 - Container EVENTO -->
      <div class="container btn-evento col-lg-3 col-md-6 col-sm-12">

        <!-- Formulário EVENTO -->
        <form action="/cadastrandoevento" method="POST">

          <!-- Navbar -->
          <navbar class="shadow-lg rounded">
            <div class="btn-evento-editar text-center">
              <h7>Adicionar evento</h7>
            </div>
          </navbar>

          <!-- DATA -->
          <div class="card-body text-white m-3">
            <input class="text-center" type="date" id="data" name="data" required="required"
              aria-describedby="dataHelpBlock">

            <!-- DESCRIÇÃO -->
            <textarea class="form-control mt-1" id="descricao" data-ls-module="charCounter" maxlength="100"
              name="descricao" type="textarea" rows="5" cols="50" placeholder="Insira a descrição da atividade"
              required="required" aria-describedby="descricaoHelpBlock"></textarea>
            <br>

            <!-- BUTTONS -->
            <div class="row">
              <div class="col-6">

                <!-- BUTTON SUBMIT -->
                <button class="btn-button-claro" type="submit"><img class="trash" src="/img/save.png"
                    alt="salvar"><img></button>
              </div>
              <div class="col-6">

                <!-- BUTTON DELETE -->
                <button class="btn-button-claro" type="reset"><img class="trash" src="/img/trash.png" alt="lixo"><img><a
                    href="/delevento/{{data}}"></a></button>
              </div>
            </div>
          </div>
        </form> <!-- Fim do Formulário -->
      </div> <!-- Fim do container EVENTO -->
    </div> <!-- FIM da linha -->
  </div> <!-- FIM do form -->
</div> <!-- FIM do calendário -->
